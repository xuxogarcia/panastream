# API Security (generate with: node generate-token.js)
PANASTREAM_API_TOKEN=your_generated_token_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=your-streaming-bucket
S3_UPLOAD_FOLDER=uploads
S3_PROCESSED_FOLDER=processed

# CloudFront Configuration
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# MediaConvert Configuration (replace with your account and role)
MEDIACONVERT_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:role/YOUR_MEDIACONVERT_ROLE
MEDIACONVERT_ENDPOINT=https://account.mediaconvert.region.amazonaws.com

# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_PATH=./database.sqlite

# Digital Ocean App Platform (when deploying)
FRONTEND_URL=https://your-app-name.ondigitalocean.app
APP_URL=https://your-app-name.ondigitalocean.app
REACT_APP_API_URL=https://your-app-name.ondigitalocean.app/api
